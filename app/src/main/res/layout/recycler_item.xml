<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvPersonPhoto"
                android:layout_width="91dp"
                android:layout_height="84dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/imvPersonPhoto"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPersonSurname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="surname"
                app:layout_constraintLeft_toRightOf="@+id/imvPersonPhoto"
                app:layout_constraintTop_toBottomOf="@+id/tvPersonName" />

            <TextView
                android:id="@+id/tvPersonGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="gender"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPersonName"
                app:layout_constraintLeft_toRightOf="@+id/imvPersonPhoto"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tvPersonRegion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="region"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPersonGender"
                app:layout_constraintLeft_toRightOf="@+id/imvPersonPhoto"
                android:layout_marginLeft="8dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>